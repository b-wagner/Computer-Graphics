package assignment3;

import java.awt.*;
import javax.swing.*;

public class Spotlight extends JPanel
{
	int size = 100;
	
	Point spotLoc;
	
	public Spotlight(int mouseX, int mouseY)
	{
		spotLoc = new Point();
		
		spotLoc.setLocation(mouseX, mouseY);
	}
	
	public void draw(Graphics g)
	{
		g.setColor(Color.white);
		g.fillRect((int)spotLoc.getX(), (int)spotLoc.getY(), size, size);
	}
}
